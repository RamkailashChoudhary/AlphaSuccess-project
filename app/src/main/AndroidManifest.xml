<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.alphasucess">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/title_activity_home"></activity>
        <activity android:name=".ui.tabui.signup.SignUpActivity" />
        <activity android:name=".ui.ForgotPasswordActivity" />
        <activity
            android:name=".ui.tabui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ui.VerifyOtpActivity"
            android:label="@string/title_activity_otp" />

        <activity
            android:name=".ui.WebBaseActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>