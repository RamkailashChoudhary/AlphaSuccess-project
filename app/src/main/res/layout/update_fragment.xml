<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/update_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/logo_white_name"
                        android:background="@drawable/roundedwhite_drop_shadow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="6dp"
                        android:background="@drawable/roundedwhite_drop_shadow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.336"
                        app:layout_constraintStart_toStartOf="@+id/img_profile"
                        app:layout_constraintTop_toTopOf="@+id/img_profile"
                        app:layout_constraintVertical_bias="0.678"
                        app:srcCompat="@android:drawable/ic_menu_edit" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:hint="Name"
                            android:id="@+id/edtxt_name"
                            android:textColorHint="#000000"
                            android:textColor="@color/white"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/name"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="7dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:hint="Email"
                            android:id="@+id/txt_email"
                            android:textColorHint="#000000"
                            android:textColor="@color/white"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/email"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="7dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:hint="Mobile Number"
                            android:id="@+id/txt_mobile_number"
                            android:textColorHint="#000000"
                            android:textColor="@color/white"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/mobile_number"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="7dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/txtx_address"
                            android:hint="Address"
                            android:textColor="@color/white"
                            android:textColorHint="#000000"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/address"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="7dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="wrap_content">
                        <AutoCompleteTextView
                            android:id="@+id/drop_state"
                            android:layout_width="match_parent"
                            android:hint="Select State"
                            android:textColorHint="#000000"
                            android:textColor="@color/white"
                            android:drawablePadding="5dp"
                            android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                            android:drawableStart="@drawable/ic_location_on_black_24dp"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="7dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/txt_password"
                            android:hint="Chnage Password"
                            android:textColor="@color/white"
                            android:inputType="textPassword"
                            android:textColorHint="#000000"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/password"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="7dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:hint="Confirm Password"
                            android:textColor="@color/white"
                            android:id="@+id/txt_confirm_password"
                            android:inputType="textPassword"
                            android:textColorHint="#000000"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/password"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/txt_referral"
                        android:text="Your Referral Id:416746"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="UPDATE PORFILE"
                            android:id="@+id/btn_update"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="64dp"
                            android:background="@drawable/update_button_bg"
                            android:gravity="center"
                            android:layout_marginLeft="35dp"
                            android:layout_marginRight="35dp"
                            android:textColor="#ffffff"
                            android:textAllCaps="true"
                            android:textStyle="normal"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/loadingProgressBar"/>

</FrameLayout>