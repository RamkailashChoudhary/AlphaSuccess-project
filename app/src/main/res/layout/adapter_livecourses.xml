<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginRight="30dp"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:elevation="0dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/alphatest"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#8F8D8D"
                app:layout_constraintBottom_toTopOf="@+id/guideline5"
                app:layout_constraintStart_toStartOf="@+id/txt_subject"
                app:layout_constraintTop_toBottomOf="@+id/txt_subject"
                 />

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="41dp"
                android:layout_height="26dp"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/ic_menu_my_calendar"
                android:elevation="1dp"
                app:layout_constraintStart_toStartOf="@+id/txt_lang"
                app:layout_constraintTop_toBottomOf="@+id/txt_lang" />

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:elevation="1dp"
                app:layout_constraintStart_toStartOf="@+id/seekBar"
                app:layout_constraintTop_toBottomOf="@+id/seekBar"
                app:srcCompat="@android:drawable/ic_menu_share" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:elevation="1dp"
                android:max="200"
                android:progress="50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/img_icon"
                app:layout_constraintTop_toBottomOf="@+id/img_icon"
                app:tickMarkTintMode="add" />

            <TextView
                android:id="@+id/txt_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:text="Macroeconomic Aggregates"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Richa Ma'am"
                android:textColor="#000000"
                app:layout_constraintEnd_toStartOf="@+id/guideline26"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_profile"
                app:layout_constraintTop_toTopOf="@+id/img_profile" />

            <TextView
                android:id="@+id/txt_faculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Faculty"
                android:textColor="#797979"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline26"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txt_name"
                app:layout_constraintTop_toBottomOf="@+id/txt_name" />

            <TextView
                android:id="@+id/txt_startin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="STARTS IN"
                android:textAllCaps="true"
                android:textColor="#797979"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.72"
                app:layout_constraintStart_toStartOf="@+id/guideline26"
                app:layout_constraintTop_toTopOf="@+id/txt_name" />

            <TextView
                android:id="@+id/txt_startin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="02:05:12"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/txt_startin"
                app:layout_constraintStart_toStartOf="@+id/txt_startin"
                app:layout_constraintTop_toBottomOf="@+id/txt_startin" />

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Conflghkfdjgh kfgjhkfg kfgkfjgh fdghfjgh fdghfdgh fkdghkfj"
                android:textColor="#797979"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_profile"
                app:layout_constraintEnd_toEndOf="@+id/txt_startin_time"
                app:layout_constraintStart_toStartOf="@+id/txt_faculty"
                app:layout_constraintTop_toTopOf="@+id/guideline25" />

            <TextView
                android:id="@+id/textView149"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/alphabottom_sheet_change"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline5" />

            <TextView
                android:id="@+id/txt_livecourse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:text="Economics Live Course"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline5" />

            <TextView
                android:id="@+id/txt_timings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:text="05:45 - 04:45 PM"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txt_livecourse"
                app:layout_constraintTop_toBottomOf="@+id/txt_livecourse" />

            <TextView
                android:id="@+id/txt_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:text="Lsngusge - English"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txt_timings"
                app:layout_constraintTop_toBottomOf="@+id/txt_timings" />

            <TextView
                android:id="@+id/txt_enrolled"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="12dp"
                android:textSize="10sp"
                android:text="Students Enrolled - 876"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@+id/img_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_icon"
                app:layout_constraintTop_toTopOf="@+id/img_icon" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.47" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.32" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />

            <TextView
                android:id="@+id/txt_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Share with friends"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/img_share"
                app:layout_constraintStart_toEndOf="@+id/img_share"
                app:layout_constraintTop_toTopOf="@+id/img_share" />

            <TextView
                android:id="@+id/txt_claimnow"
                android:layout_width="100dp"
                android:layout_height="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/claimnow_button_background"
                android:gravity="center"
                android:padding="2dp"
                android:text="Claim now"
                android:textAllCaps="true"
                android:textColor="#504F4F"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBar" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_live"
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:text="Live"
        android:textSize="10sp"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:elevation="5dp"
        android:background="@drawable/alpha_rounded"
        android:layout_marginLeft="50dp" />


</FrameLayout>